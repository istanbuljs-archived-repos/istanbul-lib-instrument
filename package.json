{
  "name": "istanbul-lib-instrument",
  "version": "1.1.3",
  "description": "Core istanbul API for JS code coverage",
  "author": "Krishnan Anantheswaran <kananthmail-github@yahoo.com>",
  "main": "dist/index.js",
  "scripts": {
    "release": "babel src --out-dir dist && documentation build -f md -o api.md src/*js",
    "test": "NODE_ENV=test nyc --check-coverage --statements 90 --branches 80 mocha --recursive test/",
    "pretest": "jshint src/ test/",
    "prepublish": "npm test && npm run release",
    "version": "standard-version",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "babel-generator": "^6.11.3",
    "babel-template": "^6.9.0",
    "babel-traverse": "^6.9.0",
    "babel-types": "^6.10.2",
    "babylon": "^6.8.1",
    "istanbul-lib-coverage": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-plugin-istanbul": "^2.0.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.16.3",
    "chai": "^3.0.0",
    "clone": "^2.0.0",
    "coveralls": "^2.11.4",
    "documentation": "^4.0.0-beta9",
    "js-yaml": "^3.3.1",
    "jshint": "^2.8.0",
    "mocha": "^3.1.2",
    "nopt": "^3.0.6",
    "nyc": "^8.3.1",
    "standard-version": "^3.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/istanbuljs/istanbul-lib-instrument/issues"
  },
  "homepage": "https://github.com/istanbuljs/istanbul-lib-instrument",
  "repository": {
    "type": "git",
    "url": "git@github.com:istanbuljs/istanbul-lib-instrument.git"
  },
  "keywords": [
    "coverage",
    "istanbul",
    "js",
    "instrumentation"
  ]
}
